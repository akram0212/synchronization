<Window x:Class="_01electronics_crm.WorkOffersFilteredWithRFQSerialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01electronics_crm"
        mc:Ignorable="d"
        Title="WorkOffersFilteredWithRFQSerialWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Name="WorkOffers" Content="SELECT WORK OUTGOING_QUOTATION" Background="#105A97" Style="{StaticResource secondaryHeaderTextStyle}"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24">
            <StackPanel Name="workOffersStackPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray"/>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Cancel" Name="cancelButton" Style="{StaticResource buttonStyle}" Click="OnBtnClickCancel"/>

    </Grid>
</Window>
