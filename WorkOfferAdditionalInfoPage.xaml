<Page x:Class="_01electronics_crm.WorkOfferAdditionalInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_01electronics_crm"
      mc:Ignorable="d" 
      Title="WorkOfferAdditionalInfoPage">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Background="#105A97" Name="RFQHeader" Content="WORK OFFER PAYMENT AND DELIVERY" Style="{StaticResource secondaryHeaderTextStyle}"/>

            <Grid Grid.Row="1" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource unselectedSecondaryTabBorder}" MouseLeftButtonDown="OnClickBasicInfo">
                    <Label Content="Basic Info" Style="{StaticResource unselectedSecondaryTabLabelItem}" MouseLeftButtonDown="OnClickBasicInfo"/>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource unselectedSecondaryTabBorder}" MouseLeftButtonDown="OnClickProductsInfo">
                    <Label Content="Products Info" Style="{StaticResource unselectedSecondaryTabLabelItem}" MouseLeftButtonDown="OnClickProductsInfo"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource unselectedSecondaryTabBorder}" MouseLeftButtonDown="OnClickPaymentAndDeliveryInfo">
                    <Label Content="Payment and Delivery" Style="{StaticResource unselectedSecondaryTabLabelItem}" MouseLeftButtonDown="OnClickPaymentAndDeliveryInfo"/>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource selectedSecondaryTabBorder}" MouseLeftButtonDown="OnClickAdditionalInfo">
                    <Label Content="Additional Info" Style="{StaticResource selectedSecondaryTabLabelItem}" MouseLeftButtonDown="OnClickAdditionalInfo"/>
                </Border>
            </Grid>

            <WrapPanel Grid.Row="2">
                <WrapPanel>
                    <Label Content="Contract Type" Style="{StaticResource labelStyle}" Width="150"/>
                    <ComboBox Name="contractTypeCombo" Style="{StaticResource comboBoxStyle}" Width="150" SelectionChanged="ContractTypeComboSelectionChanged"/>
                </WrapPanel>
                <WrapPanel>
                    <Label  Content="Warranty Period" Style="{StaticResource labelStyle}" Width="150"/>
                    <TextBox Name="warrantyPeriodTextBox" Style="{StaticResource textBoxStyle}"  Width="100" VerticalAlignment="Center" TextChanged="WarrantyPeriodTextBoxTextChanged"/>
                    <ComboBox Name="warrantyPeriodCombo"  Style="{StaticResource comboBoxStyle}" Width="150" SelectionChanged="WarrantyPeriodComboSelectionChanged"/>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Offer Validity Period" Style="{StaticResource labelStyle}" Width="150"/>
                    <ComboBox Name="offerValidityCombo" Style="{StaticResource comboBoxStyle}" Width="150" SelectionChanged="OfferValidityComboSelectionChanged"/>
                    <TextBox Name="offerValidityTextBox" Style="{StaticResource textBoxStyle}" VerticalAlignment="Center" Width="150" TextChanged="OfferValidityTextBoxTextChanged"/>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Additional Description" Style="{StaticResource labelStyle}" Width="180"/>
                    <Label Content="(Optional)" Style="{StaticResource labelStyle}"/>
                    <TextBox Name="additionalDescriptionTextBox" Style="{StaticResource textBoxStyle}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalAlignment="Center" TextChanged="AdditionalDescriptionTextBoxTextChanged"/>
                </WrapPanel>
            </WrapPanel>
        </Grid>
    </Grid>
</Page>
